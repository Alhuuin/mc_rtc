{
  "title": "mc_tasks::TrajectoryTask",
  "type": "object",
  "properties":
  {
    "type": { "enum": ["trajectory"] },
    "name": { "type": "string" },
    "robotIndex": { "type": "integer", "minimum": 0 },
    "surface": { "type": "string" },
    "duration": { "type": "number", "minimum": 0 }, 
    "stiffness": { "type": "number", "minimum": 0 }, 
    "posWeight": { "type": "number", "minimum": 0 }, 
    "oriWeight": { "type": "number", "minimum": 0 }, 
    "target": { "$ref": "/../../sva/PTransformd.json" },
    "targetSurface": { "$ref" : "/../../common/trajectory_targetSurface.json" },
    "activeJoints": { "type": "array", "items": { "type": "string" } },
    "unactiveJoints": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["type", "robotIndex", "surface"],
  "oneOf": [ { "required": [ "target" ] },
             { "required": [ "targetSurface" ] }
           ]
}
