{
  "title": "mc_tasks::PostureTask",
  "type": "object",
  "properties":
  {
    "type": { "enum": ["posture"], "type": "string" },
    "name": { "type": "string" },
    "robot": { "type": "string", "default": "MainRobot", "description": "Name of robot to which this task applies"},
    "stiffness": { "type": "number", "minimum": 0},
    "weight": { "type": "number", "minimum": 0},
    "posture": { "type": "array", "items": { "type": "array", "items": { "type": "number" } } },
    "activeJoints": { "type": "array", "items": { "type": "string" } },
    "unactiveJoints": { "type": "array", "items": { "type": "string" } },
    "jointGains": { "type": "array", "items": { "$ref": "/../../Tasks/JointGains.json" } },
    "target":
    {
      "type": "array",
      "description": "Map of joint names -> vector of joint values",
      "items":
      {
        "type": "array",
        "items":
        [
          { "type": "string" },
          {
            "type": "array",
            "items": [
              {"type": "number"}
            ]
          }
        ]
      }
    }
  },
  "required": ["type", "stiffness", "weight"]
}
